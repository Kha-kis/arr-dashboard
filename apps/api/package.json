{
	"name": "@arr/api",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"dev:launcher": "tsx src/launcher.ts",
		"build": "tsup src/index.ts src/launcher.ts --format esm --clean",
		"start": "node ./dist/launcher.js",
		"lint": "biome lint src",
		"format": "biome format src",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"db:generate": "prisma generate --schema prisma/schema.prisma",
		"db:push": "prisma db push --schema prisma/schema.prisma",
		"db:sync": "prisma db push --schema prisma/schema.prisma --skip-generate",
		"reset-admin-password": "tsx scripts/reset-admin-password.ts",
		"reset-oidc": "tsx scripts/reset-oidc.ts"
	},
	"dependencies": {
		"@arr/shared": "workspace:*",
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "11.2.0",
		"@fastify/helmet": "^13.0.2",
		"@fastify/rate-limit": "^10.3.0",
		"@fastify/websocket": "^11.2.0",
		"@prisma/adapter-better-sqlite3": "^7.3.0",
		"@prisma/client": "^7.3.0",
		"@simplewebauthn/server": "^13.2.2",
		"arctic": "^3.7.0",
		"argon2": "^0.44.0",
		"arr-sdk": "^0.5.0",
		"better-sqlite3": "^12.6.2",
		"dequal": "^2.0.3",
		"dotenv": "^17.2.3",
		"fastify": "5.7.1",
		"fastify-plugin": "^5.1.0",
		"isomorphic-dompurify": "^2.35.0",
		"marked": "^17.0.1",
		"oauth4webapi": "^3.8.3",
		"pino": "^10.2.1",
		"prisma": "^7.3.0",
		"tmdb-ts": "^2.2.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.0.9",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17"
	}
}
