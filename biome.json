{
  "$schema": "https://biomejs.dev/schemas/1.5.6/schema.json",
  "formatter": {
    "enabled": true,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "warn",
        "noUselessElse": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["legacy/**", "**/node_modules/**", "**/dist/**"]
  }
}
